{
  "name": "tailwind",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/tailwind/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/libs/tailwind",
        "main": "libs/tailwind/src/index.ts",
        "tsConfig": "libs/tailwind/tsconfig.lib.json",
        "assets": ["libs/tailwind/*.md"]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs tailwind {args.ver} {args.tag}",
      "dependsOn": ["build"]
    }
  },
  "tags": ["scope:tailwind", "type:ui", "publishable"]
}
