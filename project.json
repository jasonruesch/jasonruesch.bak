{
  "name": "jasonruesch",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "./src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/jasonruesch"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production",
          "generatePackageJson": true
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "dependsOn": ["^build"],
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "jasonruesch:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "jasonruesch:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "jasonruesch:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "jasonruesch:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "jasonruesch:build:development"
        },
        "production": {
          "buildTarget": "jasonruesch:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "coverage/jasonruesch"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["./src"]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "dependsOn": ["build"],
      "options": {
        "preset": "conventional",
        "tagPrefix": "jasonruesch-v",
        "postTargets": ["github"]
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "{tag}",
        "notes": "{notes}"
      }
    }
  },
  "tags": []
}
